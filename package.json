{
  "name": "adverts-ui",
  "version": "0.1.0-alpha",
  "private": true,
  "scripts": {
    "index-components": "node ./scripts/indexComponents.js",
    "start": "webpack-dev-server --inline --hot --open --config webpack.config.dev.js",
    "lint": "eslint .",
    "flow": "flow status --show-all-errors",
    "test": "jest --env=jsdom --maxWorkers=4",
    "coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "material-ui": "^0.20.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "socket.io-client": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "css-loader": "^0.28.4",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "flow-bin": "^0.66.0",
    "html-webpack-plugin": "^2.29.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.2",
    "node-sass": "^4.5.3",
    "resolve-url-loader": "^2.2.1",
    "sass-loader": "^6.0.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  },
  "jest": {
    "testRegex": ".*spec\\.js$",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!src/redux/*.js",
      "!src/components/**/index.js"
    ],
    "setupFiles": ["babel-polyfill"],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|node_modules)[/\\\\]"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleNameMapper": {
      "^.+\\.css$": "identity-obj-proxy"
    }
  }
}
